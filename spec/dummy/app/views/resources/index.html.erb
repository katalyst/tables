<% content_for(:head) do %>
  <meta name="turbo-refresh-method" content="morph">
  <meta name="turbo-refresh-scroll" content="preserve">
<% end %>

<% table = Katalyst::TableComponent.new(id: dom_id(Resource, "list"), collection:)
   table.extend(Katalyst::Tables::Identifiable)
   table.extend(Katalyst::Tables::Selectable) %>

<%= render Katalyst::Tables::Selectable::FormComponent.new(table:) do %>
  <%= tag.button "Download", formaction: "/resources.csv", formmethod: "GET" %>
  <%= tag.button "Activate", formaction: "/resources/active", formmethod: "PUT" %>
<% end %>

<%= render table %>
