<%# locals: { row:, resource: } %>

<% row.html_attributes = { id: dom_id(resource) } if row.body? %>

<% row.try(:selection) %>
<% row.cell :name, label: "Resource partial" do %>
  <%= resource.name %>
<% end %>
<% row.cell :active, class: "active" do |cell| %>
  <%= cell.value ? "Yes" : "No" %>
<% end %>
