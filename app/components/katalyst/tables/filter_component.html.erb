<%= tag.div(**html_attributes) do %>
  <% if content? %>
    <%= content %>
  <% else %>
    <%= form do |form| %>
      <%= form.text_field(
            :query,
            type:         :search,
            autocomplete: "off",
            **input_attributes,
          ) %>

      <%= form.button("Apply", type: :submit, name: nil) %>
    <% end %>
  <% end %>

  <%= modal %>
<% end %>
